<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/recycle_view_container"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="me.gensh.helloustb.CampusCardConsumption"
    tools:showIn="@layout/activity_campus_card_consumption">

    <me.gensh.views.RecyclerViewWithEmptySupport
        android:id="@+id/campus_card_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.jpardogo.android.googleprogressbar.library.GoogleProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/progress_length"
        android:layout_height="@dimen/progress_length"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:type="chrome_floating_circles" />

</androidx.constraintlayout.widget.ConstraintLayout>
