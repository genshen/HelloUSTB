<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/recycle_view_campus_card_item_vertical_margin"
    android:layout_marginLeft="@dimen/recycle_view_campus_card_item_horizontal_margin"
    android:layout_marginRight="@dimen/recycle_view_campus_card_item_horizontal_margin"
    android:layout_marginTop="@dimen/recycle_view_campus_card_item_vertical_margin"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/campus_card_tag_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/campus_card_consume_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/campus_card_consume_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/campus_card_consume_place" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/campus_card_consume_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/campus_card_consume_money" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/campus_card_consume_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/campus_card_consume_left" />
    </RelativeLayout>

</LinearLayout>
