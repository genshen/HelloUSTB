<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.holo.view.MultiSelectView
        android:id="@+id/week_id_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:msvItemCount="24"
        app:msvRowNum="5"
        app:msvItemBackgroundColor="@color/timetable_edit_week_id_item"
        app:msvItemSelectedColor="@color/timetable_edit_week_id_select"
        app:msvItemTextColor="@color/white"
        app:msvItemTextSize="18dp"
        app:msvItemRadius="4dp"
        app:msvItemPadding="1dp"/>
</LinearLayout>