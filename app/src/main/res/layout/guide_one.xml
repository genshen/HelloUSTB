<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/guide_wifi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Space 
            android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="2"/>
        <ImageView
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="6"
	        android:src="@drawable/guide_wifi" />
        <Space 
            android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="2"/>
    </LinearLayout>
    
     <TextView
        android:id="@+id/guide_net_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guide_wifi"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:text="@string/guide_net_login" />
     
     <TextView
	        android:id="@+id/guide_net_detail"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/guide_net_login_title"
	        android:text="@string/guide_net_detail"
	        android:textColor="@color/white"/>

</RelativeLayout>
