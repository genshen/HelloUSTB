<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/color_card_margin_vertical"
    android:paddingLeft="@dimen/color_card_margin_horizontal"
    android:paddingRight="@dimen/color_card_margin_horizontal"
    android:paddingTop="@dimen/color_card_margin_vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/color_card_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_card_left"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:src="@color/black" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="@dimen/color_card_padding_vertical"
                android:paddingLeft="@dimen/color_card_padding_horizontal"
                android:paddingRight="@dimen/color_card_padding_horizontal"
                android:paddingTop="@dimen/color_card_padding_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/home_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textColor="@color/gray_d"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/home_card_right"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:src="@color/black" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>